# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:password@localhost:5432/socially?schema=public"

# ============================================
# NEXTAUTH CONFIGURATION
# ============================================
# Generate with: openssl rand -base64 32
# NextAuth v5 uses AUTH_SECRET (NEXTAUTH_SECRET is fallback for compatibility)
AUTH_SECRET="your-secret-key-here-generate-with-openssl"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"
NEXTAUTH_URL="http://localhost:3000"

# ============================================
# OAUTH PROVIDERS (Optional - Leave empty to disable)
# ============================================
# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Facebook OAuth (https://developers.facebook.com/apps/)
FACEBOOK_CLIENT_ID=""
FACEBOOK_CLIENT_SECRET=""

# ============================================
# STRIPE PAYMENT PROCESSING
# ============================================
# Stripe API Keys (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Stripe Webhook Secret (https://dashboard.stripe.com/webhooks)
# Create endpoint: https://yourdomain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# ============================================
# EMAIL CONFIGURATION (Optional - Not yet implemented)
# ============================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM="noreply@yourdomain.com"

# ============================================
# KYC VERIFICATION (Optional - Not yet implemented)
# ============================================
KYC_API_KEY="your-kyc-api-key"
KYC_API_SECRET="your-kyc-api-secret"

# ============================================
# FILE STORAGE (Optional - Not yet implemented)
# ============================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-bucket-name"

# ============================================
# APPLICATION SETTINGS
# ============================================
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

